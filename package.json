{
  "name": "codex-subagents-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript MCP server exposing a single delegate tool to run task-specific sub-agents (review, debugger, security) for Codex CLI.",
  "main": "dist/codex-subagents.mcp.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/codex-subagents.mcp.ts",
    "start": "node dist/codex-subagents.mcp.js",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "e2e": "bash scripts/e2e.sh"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "codex",
    "codex-cli",
    "subagents",
    "sub-agents",
    "anthropic",
    "claude",
    "tools"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@openai/codex": "^0.27.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0",
    "yaml": "^2.5.1"
  }
}
